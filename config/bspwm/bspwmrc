#! /usr/bin/env bash

#
#  ██
# ░██              ██████
# ░██       ██████░██░░░██ ███     ██ ██████████
# ░██████  ██░░░░ ░██  ░██░░██  █ ░██░░██░░██░░██
# ░██░░░██░░█████ ░██████  ░██ ███░██ ░██ ░██ ░██
# ░██  ░██ ░░░░░██░██░░░   ░████░████ ░██ ░██ ░██
# ░██████  ██████ ░██      ███░ ░░░██ ███ ░██ ░██
# ░░░░░   ░░░░░░  ░░      ░░░    ░░░ ░░░  ░░  ░░
#

###################################
#########     Startup      ########
###################################

pgrep -x sxhkd > /dev/null || sxhkd &
killall -q sxhkd &
sxhkd &
nitrogen --restore &
/home/mehesares/.screenlayout/screenres.sh &
/home/mehesares/.config/polybar/launch.sh &
nm-applet &
flameshot &
xfce4-clipman &
xfce4-power-manager &
picom --experimental-backends &

###################################
########     Workspaces    ########
###################################

bspc monitor LVDS-1 -d I II III IV V

if [[ $(xrandr -q | grep "$external_monitor connected") ]]; then
        bspc monitor HDMI-1 -d I II III IV V
fi

###################################
#####     Window Settings     #####
###################################

bspc config border_radius               8
bspc config border_width                2

bspc config window_gap                  10

bspc config top_padding                 22
bspc config bottom_padding              0
bspc config left_padding                0
bspc config right_padding               0

bspc config pointer_follows_monitor     true
bspc config focus_follows_pointer       true

bspc config split_ratio                 0.50
bspc config borderless_monocle          true
bspc config gapless_monocle             true

bspc config remove_disabled_monitors    true
bspc config remove_unplugged_monitors   true

###################################
#####       Window Rules      #####
###################################

# remove all rules first
bspc rule -r *:*

bspc rule -a Gimp       desktop='^8'    follow=on
bspc rule -a Chromium   desktop='^2'
bspc rule -a mplayer2                   state=floating
bspc rule -a Nitrogen   desktop='^8'    state=floating
bspc rule -a Pavucontrol                state=floating
bspc rule -a GParted                    state=floating
bspc rule -a Kupfer.py  focus=on
bspc rule -a Screenkey  manage=off

###################################
#####      Border Colours     #####
###################################

#bspc config focused_border_color "#131a1c"
#bspc config normal_border_color "#131a1c"